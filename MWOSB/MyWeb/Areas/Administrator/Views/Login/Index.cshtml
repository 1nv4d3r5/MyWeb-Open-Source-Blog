@model MyWebEntityLibrary.AdminInformationsEntity.AdminInformationsTable

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height" />
    <meta name="HandheldFriendly" content="true" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Admin - Giriş</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-1.8.2.min.js"></script>
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

<body style="background: #bdc3c7">
    <section class="giris">
        <div class="container410">
            <div class="row">
                <div class="girisyap">
                    <div class="logo" style="clear: both; padding-left: 0">
                        <img src="~/Content/Administrator/Images/yatech.jpg" style="padding-left: 0" alt="">
                    </div>

                    @using (Html.BeginForm("LoginControl", "Login", FormMethod.Post))
                    {
                        <div class="inputlar">
                            <div>
                                @Html.TextBoxFor(u => u.AdminName, new {  name = "username", placeholder = "Kullanıcı Adı"})
                            </div>
                            <div>
                                @Html.PasswordFor(u => u.AdminPassword, new { name = "userpassword", placeholder = "Parola"})
                            </div>
                        </div>
                        <button>Giriş Yap</button>
                    }


                </div>
            </div>
        </div>
    </section>
<script type="text/javascript">
    $(function () {
        var w = $(window).width();
        var h = $(window).height();
        $(".girisyap").attr("style", "top:" + (h / 2) + "px;margin-top:-" + ($(".girisyap").height() / 2) + "px");

    });


</script>






</body>
</html>
